{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "rootDir": "../",
    "outDir": "../.cache/ts-server",
    "types": ["node", "vite/client"]
  },
  "include": ["**/*.ts", "**/*.json", "../app/shared/**/*.ts"],
  "exclude": ["**/dist/**/*", "**/node_modules/**/*"]
}
